@model List<UrgencyListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@if (Model.Count != 0)
{
    <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-info my-2"><i class="fas fa-plus mr-2"></i>Yeni Aciliyet Ekle</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td><a asp-action="UpdateUrgency" asp-controller="Urgency" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit mr-2"></i>Düzenle</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde Kayıtlı Aciliyet Durumu Bulunamadı.
        </p>
        <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-info my-2">Yeni Aciliyet Ekle</a>
    </div>
}